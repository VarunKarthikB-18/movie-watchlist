<template>
  <div class="app-wrapper">
    <!-- Login/Register Page -->
    <div v-if="!isAuthenticated" class="auth-page">
      <div class="auth-content">
        <div class="logo-section">
          <h1 class="logo">ðŸŽ¬ CineWatch</h1>
          <p class="tagline">Your Personal Movie Collection</p>
        </div>

        <div class="auth-card">
          <div class="auth-tabs">
            <button 
              class="tab-btn"
              :class="{ active: authMode === 'login' }"
              @click="authMode = 'login'">
              Sign In
            </button>
            <button 
              class="tab-btn"
              :class="{ active: authMode === 'register' }"
              @click="authMode = 'register'">
              Create Account
            </button>
          </div>

          <div class="tab-content">
            <Login v-if="authMode === 'login'" @login="handleLogin" />
            <Register v-if="authMode === 'register'" @register="handleRegister" />
          </div>
        </div>
      </div>
    </div>

    <!-- Main App Page -->
    <div v-else class="app-page">
      <header class="navbar">
        <div class="navbar-content">
          <h1 class="navbar-logo">ðŸŽ¬ CineWatch</h1>
          <button class="logout-btn" @click="handleLogout">Sign Out</button>
        </div>
      </header>

      <main class="main-content">
        <div class="sidebar">
          <AddMovie @movie-added="fetchMovies" />
        </div>
        <div class="content">
          <MovieList :movies="movies" @movie-updated="fetchMovies" @movie-deleted="fetchMovies" />
        </div>
      </main>
    </div>

    <!-- Notifications -->
    <div v-if="successMsg" class="notification success">
      <span>âœ“ {{ successMsg }}</span>
      <button @click="successMsg = ''" class="close-btn">Ã—</button>
    </div>
    <div v-if="errorMsg" class="notification error">
      <span>âœ— {{ errorMsg }}</span>
      <button @click="errorMsg = ''" class="close-btn">Ã—</button>
    </div>
  </div>
</template>

<script>
import { ref, onMounted } from 'vue'
import Login from './components/Login.vue'
import Register from './components/Register.vue'
import MovieList from './components/MovieList.vue'
import AddMovie from './components/AddMovie.vue'
import { getToken, logout } from './services/auth.js'
import api from './services/api.js'

export default {
  components: {
    Login,
    Register,
    MovieList,
    AddMovie
  },
  setup() {
    const isAuthenticated = ref(!!getToken())
    const authMode = ref('login')
    const movies = ref([])
    const successMsg = ref('')
    const errorMsg = ref('')

    const handleLogin = async () => {
      isAuthenticated.value = true
      successMsg.value = 'Welcome back!'
      setTimeout(() => { successMsg.value = '' }, 3000)
      await fetchMovies()
    }

    const handleRegister = async () => {
      authMode.value = 'login'
      successMsg.value = 'Account created! Please sign in.'
      setTimeout(() => { successMsg.value = '' }, 3000)
    }

    const handleLogout = () => {
      logout()
      isAuthenticated.value = false
      movies.value = []
      successMsg.value = 'Signed out successfully'
      setTimeout(() => { successMsg.value = '' }, 2000)
    }

    const fetchMovies = async () => {
      try {
        const response = await api.get('/movies')
        movies.value = response.data
        errorMsg.value = ''
      } catch (error) {
        errorMsg.value = 'Failed to load movies'
        console.error(error)
      }
    }

    onMounted(() => {
      if (isAuthenticated.value) {
        fetchMovies()
      }
    })

    return {
      isAuthenticated,
      authMode,
      movies,
      successMsg,
      errorMsg,
      handleLogin,
      handleRegister,
      handleLogout,
      fetchMovies
    }
  }
}
</script>

